# Server Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=signcraft
DB_USER=root
DB_PASSWORD=your_mysql_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Secret Keys
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_this

# Google Gemini API Configuration (for AI Features)
GEMINI_API_KEY=your_gemini_api_key_here

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/svg+xml,image/gif
ALLOWED_VIDEO_TYPES=video/mp4,video/webm

# WebSocket Configuration
WEBSOCKET_CORS_ORIGIN=http://localhost:5173

# Screen Heartbeat Configuration (in seconds)
HEARTBEAT_INTERVAL=20
HEARTBEAT_TIMEOUT=60

# Bull Queue Configuration
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
